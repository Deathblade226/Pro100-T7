<Page Width="1500"
      Height="1000"
      
    x:Class="Pro100_T7.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pro100_T7"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


<Grid x:ConnectionId='2' x:Name="mainArea">
    
<Rectangle Fill="#464646"/>

<AppBar>
<ColorPicker x:ConnectionId='6' x:Name="colorPicker"
             Height="690"
             IsAlphaEnabled="True"
             IsEnabled="True"
             Color="Black"/> 
</AppBar>    

<Canvas x:ConnectionId='3' x:Name="DrawArea"
        Height="800"
        Background="White">
<Image x:ConnectionId='5' x:Name="Image"
       Height="800"
       Width="1500"/>

</Canvas>

<TextBlock x:ConnectionId='4' x:Name="Mouse"
           Text="PlaceHolder"
           Width="800"
           FontSize="30"
           TextAlignment="Center"
           VerticalAlignment="Bottom"
           Height="50"/>

    </Grid> 

</Page>

